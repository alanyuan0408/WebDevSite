<div class="row">
	<div class="span6">
		<h1>Sign Up</h1>
		<%= form_for(@user) do |f| %>

			<%= render :partial => "shared/error_messages" if @currentPage[:usererror] == "true" %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<br>

			<%= f.submit "Create my Account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>


</div>