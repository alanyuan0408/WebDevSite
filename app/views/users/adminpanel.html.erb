<div class="row">
	<div class="span12">
		<h1>Admin Panel</h1>
	</div>
</div>

<div class="row">

	<div class="span6">
		<h4>Message to Admin:</h4>

		<p>This is the admin panel for the UofT Web Dev Club. Here you can list the users, 
			Add new Club Messages and Add Job Posts.</p>

		<br>

		<h4>Add New Web Club Message</h4>
		<%= form_for Item.create, url: items_path do |f| %> 

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :content %>
			<%= f.text_area :content, :rows => "3" %>

			<%= f.hidden_field :type_of, :value => "ClubPost" %>
			<%= f.hidden_field :contact, :value => "UoftWebDev.president@gmail.com" %>

			<%= f.submit "Add Web Club Message", class: "btn btn-large btn-primary" %>
		<% end %>

		<br>

		<h4>Add New Job Post</h4>
		<%= form_for Item.create, url: items_path do |f| %> 

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :contact %>
			<%= f.text_field :contact %>

			<%= f.label :content %>
			<%= f.text_area :content, :rows => "4" %>

			<%= f.hidden_field :type_of, :value => "JobPost" %>

			<%= f.submit "Add Job Post", class: "btn btn-large btn-primary" %>
		<% end %>

		<hr>

		<%= button_to "Sign Out", '/signout', {:class => "btn btn-large btn-primary"} %>


	</div>
	<% arryA = Array.new(['1A', '1B', '1C', '1D', '1E', '1F', '1G']) %>
	<% arryB = Array.new(['2A', '2B', '2C', '2D', '2E', '2F', '2G']) %>
	<% arryC = Array.new(['3A', '3B', '3C', '3D', '3E', '3F', '3G']) %>
	<% arry2 = Array.new(['Page 1', 'Page 2', 'Page 3', 'Page 4', 'Page 5', 'Page 6', 'Page 7']) %>
	<% arry3 = Array.new(['tab-pane active', 'tab-pane', 'tab-pane', 'tab-pane', 'tab-pane' ,'tab-pane', 'tab-pane']) %>
	<% arry4 = Array.new(['active', '', '', '', '' ,'', '']) %>
	<% i = 0 %>
	<% j = 0 %>

		<div class="span6">
			<h4>Current Users</h4>
			<hr>
			<div class="tabbable">

			<% length = (@users.length.to_f / 10.to_f).ceil %>

			<ul class="nav nav-tabs">
				<% while i < length %>
					<li class="<%= arry4[i] %>"><a href='<%= "#" + arryB[i] %>' data-toggle="tab"><%= arry2[i] %></a></li>
					<% i = i + 1 %>
				<% end %>	
			</ul>

			<div class="tab-content">
				<% @users.in_groups_of(10, false) do |batch| %>

					<div class='<%= arry3[j] %>' id='<%= arryB[j] %>'>
						<% batch.each do |items| %>	
							<h4><%= items.name %></h4>
							<p><b>Contact: </b><%= items.email %></p>
							<%= link_to "delete", items, method: :delete %>
						<% end %>
					</div>

					<% j = j + 1 %>
				<% end %>

			</div>
		</div>
		</div>

	</div>

	<% i = 0 %>
	<% j = 0 %>

	<div class="row">	
		<div class="span6">
			<h4>Club Posts</h4>
			<hr>
			<div class="tabbable">

			<% length = (@clubPost.length.to_f / 3.to_f).ceil %>

			<ul class="nav nav-tabs">
				<% while i < length %>
					<li class="<%= arry4[i] %>"><a href='<%= "#" + arryB[i] %>' data-toggle="tab"><%= arry2[i] %></a></li>
					<% i = i + 1 %>
				<% end %>	
			</ul>

			<div class="tab-content">
				<% @clubPost.in_groups_of(3, false) do |batch| %>

					<div class='<%= arry3[j] %>' id='<%= arryB[j] %>'>
						<% batch.each do |items| %>	
							<h4><%= items.title %></h4>
							<p><b>Contact: </b><%= items.contact %></p>
							<p style="white-space:pre-wrap;"><%= items.content %></p>
							<%= link_to "delete", items, method: :delete %>
							<hr>
						<% end %>
					</div>

					<% j = j + 1 %>
				<% end %>

			</div>
		</div>
		</div>

		<% i = 0 %>
		<% j = 0 %>

		<div class="span6">
			<h4>Job Posts</h4>
			<hr>
			<div class="tabbable">

			<% length = (@jobPost.length.to_f / 3.to_f).ceil %>

			<ul class="nav nav-tabs">
				<% while i < length %>
					<li class="<%= arry4[i] %>"><a href='<%= "#" + arryC[i] %>' data-toggle="tab"><%= arry2[i] %></a></li>
					<% i = i + 1 %>
				<% end %>	
			</ul>

			<div class="tab-content">
				<% @jobPost.in_groups_of(3, false) do |batch| %>

					<div class='<%= arry3[j] %>' id='<%= arryC[j] %>'>
						<% batch.each do |items| %>	
							<h4><%= items.title %></h4>
							<p><b>Contact: </b><%= items.contact %></p>
							<p style="white-space:pre-wrap;"><%= items.content %></p>
							<%= link_to "delete", items, method: :delete %>
							<hr>
						<% end %>
					</div>

					<% j = j + 1 %>
				<% end %>

			</div>
		</div>
		</div>

	</div>

</div>