<div class="row">
	<div class="span6">
		<h1> Sign In </h1>
		<%= form_for(:session, url: sessions_path) do |f| %>		
			
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<br>
			<br>

			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>

	</div>



</div>