<div class="span5">

	<div class="panel">
        <div class="panel-header bg-lightBlue fg-white">
            Sign In
        </div>
 		<div class="panel-content">

			<%= form_for(:session, url: sessions_path) do |f| %>		
					
				<%= f.label :name %>
				<%= f.text_field :name %>

				<%= f.label :password %>
				<%= f.password_field :password %>

				<br>
				<br>

				<%= f.submit "Sign in", class: "large" %>
			<% end %>
		</div>
	</div>

</div>