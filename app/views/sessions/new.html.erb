<div class="row">
	<div class="span6">
		<h1> Sign In </h1>
		<%= form_for(:session, :url => {:action => 'new'}) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<br>
			<br>

			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>

	</div>

</div>